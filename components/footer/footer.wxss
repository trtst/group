.footer {
    position: fixed;
    bottom: 0;
    display: flex;
    width: 100%;
    background: #fff;
    box-shadow:2px 2rpx 10rpx -2rpx rgba(211,218,230,1);
}
.footer .shop, .footer .user {
    flex: 1;
    padding: 20rpx 0;
    font-size: 24rpx;
    text-align: center;
}
.footer image {
    display: block;
    width: 40rpx;
    height: 40rpx;
    margin: 0 auto 10rpx;
}
