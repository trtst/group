/* pages/mall/mall.wxss */
.mall {
    height: 100%;
}

.item {
    display: flex;
    padding: 20rpx;
    margin: 20rpx 0;
    background: #fff;
}
.item .pic {
    width: 160rpx;
    height: 160rpx;
}
.item .item-info {
    flex: 1;
    padding: 0 15rpx;
}
.item .item-title {
    display: -webkit-box;
    width: 100%;
    height: 32rpx;
    font-size: 28rpx;
    line-height: 32rpx;
    margin: 10rpx 0 18rpx;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
    overflow: hidden;
}
.item-main {
    display: flex;
}
.item .item-supply {
    flex: 1;
    padding: 0 15rpx;
    text-align: center;
}
.item .price-name {
    font-size: 24rpx;
    line-height: 30rpx;
}
.item .price-num {
    line-height: 70rpx;
}
.item .item-sale {
    flex: 1;
    padding: 0 15rpx;
    text-align: center;
}
.less, .add {
    display: inline-block;
    width: 40rpx;
    height: 40rpx;
    margin-top: 15rpx;
    vertical-align: top;
}
.price-inp {
    display: inline-block;
    width: 50%;
    height: 70rpx;
    vertical-align: top;
}

.no-content {
    margin-top: 200rpx;
    text-align: center;
}
.no-content-bg {
    height: 200rpx;
    margin: 0 auto;
}
.no-content-title {
    display: block;
    font-size: 36rpx;
    font-weight: 500;
    line-height: 50rpx;
    color: #535360;
}
