.delivery {
    border-radius: 40rpx 40rpx 0 0;
    color: #fff;
    background: #FF6757;
}
.delivery image {
    width: 140rpx;
    height: 100rpx;
}


.goods {
    display: flex;
    padding:30rpx 20rpx;
    margin:20rpx;
    font-size: 0;
    border-radius:20rpx;
    background:#fff;
}
.goods-item {
    position: relative;
    width: 100rpx;
    height: 100rpx;
    font-size: 0;
    margin-right: 30rpx;
    vertical-align: top;
}
.goods-item image {
    width: 100%;
    height: 100%;
    border-radius: 20rpx;
}
.goods-item text {
    position: absolute;
    top: -10rpx;
    right: -15rpx;
    height: 30rpx;
    padding: 0 10rpx;
    line-height: 30rpx;
    text-align: center;
    font-size: 24rpx;
    color: #fff;
    background: #FF6757;
    border-radius: 100%;
}

.goods-arrow {
    flex: 1;
    line-height: 100rpx;
    font-size: 28rpx;
    text-align: right;
    color: #999;
}
.goods-arrow .addr-arrow {
    width: 40rpx;
    height: 40rpx;
    margin-top: 30rpx;
    opacity: .5;
    vertical-align: top;
    transform: rotate(180deg);
}
