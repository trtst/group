/* pages/mall/mall.wxss */
.top {
    position: relative;
    font-size: 0;
    text-align: center;
}
.top .avatar {
    position: absolute;
    left: 15rpx;
    top: 50rpx;
    width: 70rpx;
    height: 70rpx;
    margin: 20rpx 0 0 20rpx;
    border-radius: 100%;
}
.top .title {
   font-size: 34rpx;
}

.item {
    display: flex;
    margin: 0 20rpx;
}
.item .pic {
    width: 200rpx;
    height: 200rpx;
    margin-right: 20rpx;
}
.item .item-info {
    flex: 1;
}