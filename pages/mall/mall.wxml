                        </view>
                    </view>
                </view>
                <view class="item">
                    <view class="item-l">
                        <image class="pic" src="avatar.jpg"></image>
                        <view class="item-title">花园牛奶</view>
                    </view>
                    <view class="item-supply">
                        <view class="price-name">供货价</view>
                        <view class="price-num">35</view>
                    </view>
                    <view class="item-sale">
                        <view class="price-name">建议价</view>
                        <view class="price-num">
                            <text class="less">-</text>
                            <input class="price-inp" value="45" />
                            <text class="add">+</text>
                        </view>
                    </view>
                </view>
            </view>
           <view class="no-content">
                <image src="/assets/img/no-content.png" class="no-content-bg" mode="aspectFit"></image>
                <text class="no-content-title">暂无产品</text>
