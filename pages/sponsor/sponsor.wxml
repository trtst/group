<view class="container">
    <view class="sponsor">
        <view class="head">
            <navigationBar id="navigationBar"></navigationBar>
            <view class="info">
                <view class="info-avatar">
                    <image class="avatar" src="/assets/img/avatar.jpg"></image>
                </view>
                <view class="info-name">怀旧的文学小青年</view>
                <view class="info-desc">身份：团长 颜值：250</view>
            </view>
        </view>
        <view class="amount">
            <view class="amount-item">
                <view class="amount-num">115</view>
                商品数
            </view>
            <view class="amount-item">
                <view class="amount-num">115</view>
                成交订单
            </view>
            <view class="amount-item">
                <view class="amount-num">115</view>
                用户数
            </view>
        </view>
        <view class="list">
            <view class="list-title">我的服务</view>
            <view class="list-main">
                <navigator url="/pages/product/product?jump=index" open-type="navigate" class="item">
                    <view class="item-ico">
                        <image src="/assets/img/product.png"></image>
                    </view>
                    <view class="item-name">产品库管理</view>
                </navigator>
                <navigator url="/pages/mall/mall?jump=index" open-type="navigate" class="item">
                    <view class="item-ico">
                        <image src="/assets/img/mall.png"></image>
                    </view>
                    <view class="item-name">社群商城</view>
                </navigator>
                <navigator url="/pages/order/order?jump=index" open-type="navigate" class="item">
                    <view class="item-ico">
                        <image src="/assets/img/order.png"></image>
                    </view>
                    <view class="item-name">社群订单</view>
                </navigator>
                <navigator url="/pages/coupon/coupon?jump=index" open-type="navigate" class="item">
                    <view class="item-ico">
                        <image src="/assets/img/coupon.png"></image>
                    </view>
                    <view class="item-name">优惠券</view>
                </navigator>
                <navigator url="/pages/report/report?jump=index" open-type="navigate" class="item">
                    <view class="item-ico">
                        <image src="/assets/img/report.png"></image>
                    </view>
                    <view class="item-name">我的报表</view>
                </navigator>            
                <view class="item">
                    <view class="item-ico">
                        <image src="/assets/img/service.png"></image>
                    </view>
                    <view class="item-name">我的客服</view>
                </view>
                <view class="item" bindtap="getAddress">
                    <view class="item-ico">
                        <image src="/assets/img/address.png"></image>
                    </view>
                    <view class="item-name">提货地址</view>
                </view>
                <view class="item">
                    <view class="item-ico">
                        <image src="/assets/img/bulletin.png"></image>
                    </view>
                    <view class="item-name">商城公告</view>
                </view>  
            </view>
        </view>
    </view>
</view>

