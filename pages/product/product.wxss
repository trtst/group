/* pages/mall/mall.wxss */
.product {
    height: 100%;
}
.top {
    position: relative;
    left: 0;
    top: 0;
    width: 750rpx;
    background: none;
    z-index: 999;
    font-size: 40rpx;
    text-align: center;
    background: #fff;
}
.top .avatar {
    position: absolute;
    left: 20rpx;
    top: 0;
    width: 60rpx;
    display: flex;
    justify-content: flex-start;
    align-items: center;
}
.top .avatar image {
    width: 100%;
    height: 60rpx;
    border-radius: 100%;
}
.top .title {
   font-size: 34rpx;
}

.item {
    display: flex;
    padding: 20rpx;
    margin: 20rpx 0;
    background: #fff;
}
.item .pic {
    width: 160rpx;
    height: 160rpx;
}
.item .item-info {
    flex: 1;
    padding: 0 15rpx;
    text-align: center;
}
.item .item-title {
    display: -webkit-box;
    width: 100%;
    height: 32rpx;
    font-size: 28rpx;
    line-height: 32rpx;
    margin: 10rpx 0 18rpx;
    text-align: left;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
    overflow: hidden;
}
.item .item-price {
    display: flex;
    height: 100rpx;
}
.item .price-supply, .item .price-sale {
    flex: 1;
    font-size: 24rpx;
    line-height: 40rpx;
    text-align: center;
}
.item .price {
    line-height: 60rpx;
    font-size: 36rpx;
    color: #A65F1C;
}

.item .item-btn {
    width: 140rpx;
    height: 50rpx;
    line-height: 50rpx;
    text-align: center;
    margin-top: 60rpx;
    font-size: 28rpx;
    border-radius: 25rpx;
    color: #fff;
    background: #FFA957;
}

.no-content {
    margin-top: 200rpx;
    text-align: center;
}
.no-content-bg {
    height: 200rpx;
    margin: 0 auto;
}
.no-content-title {
    display: block;
    font-size: 36rpx;
    font-weight: 500;
    line-height: 50rpx;
    color: #535360;
}
