/* pages/shopping/shopping.wxss */
.shopping {
    height: 100%;
}

.list-main {
    padding: 20rpx 0;
}

.check {
    width: 34rpx;
    height: 34rpx;
    vertical-align: top;
}
.check image {
    display: none;
    width: 100%;
    height: 100%;
}
.check image.active {
    display: block;
}

.item {
    background: #fff;
} 
.goods {
    display:flex;
    justify-content:space-between;
    box-sizing:border-box;
    margin: 0 20rpx;
    border-bottom: 2rpx solid #eee;
    overflow: hidden;
}
.item:last-child .goods {
    border-bottom: 0;
}
.goods-main {
    display: flex;
    padding: 30rpx 0;
    
    box-sizing:border-box;
    width: 100%;
    transition: all 0.4s;
    transform: translateX(120rpx);
    margin-left: -120rpx;
}

.goods .check {
    padding-top: 50rpx;
}

.goods .pic {
    width: 140rpx;
    height: 140rpx;
    padding: 0 20rpx;
}
.goods .del {
    width: 120rpx;
    line-height: 180rpx;
    text-align: center;
    background:#e64340;
    font-size: 24rpx;
    color: #fff;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    transform: translateX(120rpx);
    transition: all 0.4s;
}
.item-info {
    flex: 1;
}
.item .item-title {
    display: -webkit-box;
    width: 100%;
    height: 32rpx;
    font-size: 28rpx;
    line-height: 32rpx;
    margin: 10rpx 0 18rpx;
    text-align: left;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
    overflow: hidden;
}
.item-main {
    display: flex;
    height: 40rpx;
    padding-top: 40rpx;
}
.item-price {
    color: #FF6757;
    font-size: 24rpx;
    vertical-align: bottom;
}
.item-price text {
    font-size: 36rpx;
}

.item .price-num {
    flex: 1;
    height: 40rpx;
    line-height: 40rpx;
    padding: 0 15rpx;
    text-align: right;
}
.amount {
    display: inline-block;
    width: 80rpx;
    height: 40rpx;
    line-height: 40rpx;
    text-align: center;
    font-size: 32rpx;
    min-height: 40rpx;
    vertical-align: top;
}
.less, .add {
    display: inline-block;
    width: 40rpx;
    height: 40rpx;
    vertical-align: top;
}
.less {
    filter: grayscale(100%);
}

.footer {
    display: flex;
    height: 100rpx;
    line-height: 100rpx;
    font-size: 0;
    background: #fff;
}
.check-box {
    padding: 0 20rpx;
}
.check-box .check {
    display: inline-block;
    padding-top: 32rpx;
}
.check-box text {
    display: inline-block;
    padding-left: 10rpx;
    font-size: 28rpx;
    color: #777;
}
.total {
    flex: 1;
    padding-right: 20rpx;
    font-size: 28rpx;
    text-align: right;
    color: #777;
}
.total text {
    display: inline-block;
    padding: 0 8rpx;
    font-size: 30rpx;
    font-weight: bold;
    color: #333;
}
.goOrder {
    width: 200rpx;
    text-align: center;
    font-size: 30rpx;
    color: #fff;
    background: #FF6757;
}