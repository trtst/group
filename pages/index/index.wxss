.index {
    height: 100%;
}

.tips {
    display: flex;
    height: 80rpx;
    line-height: 80rpx;
    color: #fff;
}
.tips .txt {
    width: 180rpx;
    font-size: 32rpx;
    text-align: center;
    background: #ffa400;
}
.tips .tips-main {
    flex: 1;
    padding: 0 20rpx;
    font-size: 32rpx;
    background: #999;
}

.slide {
    width: 100%;
    height: 320rpx;
}
.slide image {
    width: 100%;
    height: 100%;
}

.list-main {
    padding: 0 20rpx;
}
.item {
    background: #fff;
}
.item .pic {
    width: 100%;
    height: 380rpx;
}
.item .item-title {
    font-size: 36rpx;
}
.item-desc {
    font-size: 28rpx;
    color:#7d7d7d;
}
.item-main {
    display: flex;
}

.less, .add {
    display: inline-block;
    width: 40rpx;
    height: 40rpx;
    margin-top: 15rpx;
    vertical-align: top;
}
.price-inp {
    display: inline-block;
    width: 50%;
    height: 70rpx;
    vertical-align: top;
}

.no-content {
    margin-top: 200rpx;
    text-align: center;
}
.no-content-bg {
    height: 200rpx;
    margin: 0 auto;
}
.no-content-title {
    display: block;
    font-size: 36rpx;
    font-weight: 500;
    line-height: 50rpx;
    color: #535360;
}

.footer {
    display: flex;
    height: 88rpx;
    line-height: 88rpx;
    border-top: 2rpx solid #F2F2F2;
    background: #fff;
}
.footer .total {
    flex: 1;
    padding-right: 30rpx;
    font-size: 30rpx;
    text-align: right;
}
.footer .red {
    font-size: 32rpx;
    font-weight: bold;
    color: #FF6757;
}
.footer .goPay {
    width: 200rpx;
    text-align: center;
    font-size: 32rpx;
    color: #fff;
    background: #FF6757;
}