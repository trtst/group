/* pages/mall/mall.wxss */
.product {
    height: 100%;
}

.tab {
    display: flex;
    width: 100%;
    font-size: 0;
}
.tab .tab-item {
    flex: 1;
    line-height: 92rpx;
    font-size: 32rpx;
    text-align: center;
    border-bottom: 8rpx solid #F7F7F7;
}
.tab .tab-item.active {
    font-weight: bold;
    color: #FF5e46;
    border-bottom: 8rpx solid #FF5e46;
}

.item {
    padding: 20rpx 0;
    margin: 0 0 20rpx 0;
    background: #fff;
}
.item-header {
    display: flex;
    padding: 0 20rpx 20rpx;
    font-size: 0;
    border-bottom: 2rpx solid #F2F2F2;
}
.item-user, .item-date {
    flex: 1;
}
.item-header .item-name {
    display: inline-block;
    line-height: 50rpx;
    font-size: 28rpx;
}
.item-header .author {
    width: 50rpx;
    height: 50rpx;
    margin: 0 20rpx 0 0;
    border-radius: 100%;
    vertical-align: top;
}
.item-header .item-date {
    font-size: 24rpx;
    line-height: 50rpx;
    text-align: right;
    color: #7d7d7d;
}

.item-main {
    display: flex;
    padding: 20rpx;
}
.item-main .img {
    width: 120rpx;
    height: 120rpx;
}
.item-main .item-info {
    flex: 1;
    margin-left: 20rpx;
}
.item-main .item-title {
    display: -webkit-box;
    width: 100%;
    height: 32rpx;
    font-size: 28rpx;
    line-height: 32rpx;
    margin: 10rpx 0 18rpx;
    text-align: left;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
    overflow: hidden;
}
.item-main .item-desc {
    font-size: 24rpx;
    color: #7d7d7d;
}
.item-price {
    font-size: 0;
    text-align: right;
}
.item-price .price {
    font-size: 28rpx;
}
.item-price .add {
    font-size:24rpx;
    color:#7d7d7d;
}

.item-amount{
    padding: 20rpx;
    text-align: right;
    font-size: 28rpx;
}
.item-amount .red{
    color: #FF5e46;
    font-size: 32rpx;
}

.item-footer {
    padding: 20rpx 20rpx 0;
    border-top: 2rpx solid #F2F2F2;
    text-align: right;
}
.item-footer .item-btn {
    display: inline-block;
    width: 120rpx;
    height: 24rpx;
    padding: 10rpx;
    margin-left: 20rpx;
    line-height: 24rpx;
    border-radius: 28rpx;
    font-size: 24rpx;
    text-align: center;
    border: 2rpx solid #9d9d9d;
    color: #7d7d7d;
}
.item-footer .pay {
    border: 2rpx solid #FF5e46;
    color: #fff;
    background: #FF5e46;
}

.no-content {
    margin-top: 200rpx;
    text-align: center;
}
.no-content-bg {
    height: 200rpx;
    margin: 0 auto;
}
.no-content-title {
    display: block;
    font-size: 36rpx;
    font-weight: 500;
    line-height: 50rpx;
    color: #535360;
}