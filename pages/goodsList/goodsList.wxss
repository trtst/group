.list {
    padding: 20rpx 0;
}
.item {
    display: flex;
    padding: 20rpx;
    font-size: 0;
    border-bottom: 2rpx solid #f7f7f7;
    background: #fff;
} 
.item .pic {
    width: 140rpx;
    height: 140rpx;
    padding-right: 20rpx;
}
.item-info {
    flex: 1;
}
.item-title {
    display:-webkit-box;
    width:100%;
    height: 80rpx;
    font-size: 32rpx;
    line-height: 40rpx;
    text-align:left;
    -webkit-line-clamp:1;
    -webkit-box-orient:vertical;
    overflow:hidden;
}
.item-box {
    display: flex;
    font-size: 0;
}
.item-price {
    flex: 1;
    line-height: 60rpx;
    color:#FF6757;
    font-size:24rpx;
}
.item-price text {
    font-size: 36rpx;
}
.item-amount {
    flex: 1;
    line-height: 60rpx;
    color:#999;
    font-size:24rpx;
    text-align: right;
}